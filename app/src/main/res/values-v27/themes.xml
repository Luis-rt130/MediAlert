<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for API 27+. -->
    <style name="Base.Theme.MediAlert" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Outline Colors -->
        <item name="colorOutline">@color/border_light</item>
        <item name="colorOutlineVariant">@color/border_medium</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar (API 27+) -->
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MediAlert.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MediAlert.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MediAlert.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MediAlert.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MediAlert.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MediAlert.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MediAlert.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MediAlert.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MediAlert.Caption</item>
    </style>
</resources>
