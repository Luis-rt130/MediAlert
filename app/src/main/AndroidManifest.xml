<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos para ubicación GPS -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MediAlert">
        <activity
            android:name=".screens.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.main.MainActivity"
            android:exported="false" />
        <activity
            android:name=".screens.addmedicine.AddMedicineActivity"
            android:label="Añadir Medicamento" />
        <activity
            android:name=".screens.profile.ProfileActivity"
            android:label="@string/profile_title" />
        <activity
            android:name=".screens.location.LocationActivity"
            android:label="@string/location_title" />
        <activity
            android:name=".screens.login.RegisterActivity"
            android:label="@string/register_title" />
        <activity
            android:name=".screens.login.ForgotPasswordActivity"
            android:label="@string/forgot_password_title" />

        <!-- API Key de Google Maps - NOTA: El usuario debe reemplazar esto con su propia API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY_HERE" />
    </application>

</manifest>